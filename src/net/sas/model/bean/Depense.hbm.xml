<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="net.sas.model.bean">
	<class name="Depense" abstract="true">
		<id name="id" type="long">
			<generator class="increment" />
		</id>
		<many-to-one name="vehicule" class="Vehicule" cascade="save-update, delete" />
		<property name="quantite" type="integer" />
		<property name="coutUnitaire" type="double" />
		<property name="coutTotal"
			formula="select quantite * coutUnitaire 
				from Depense d d.id = id" />
		<union-subclass name="Consommation">
			<many-to-one name="employe" class="Employe"
				cascade="save-update , delete , delete-orphan" />
			<many-to-one name="fournisseur" class="Fournisseur"
				cascade="save-update, delete, delete-orphan" />
			<property name="dateConsommation" type="date" />
			<many-to-one name="odometreDebut" class="Odometre"
				unique="true" cascade="save-update, delete, delete-orphan" />
			<many-to-one name="odometreFin" class="Odometre" unique="true"
				cascade="save-update, delete, delete-orphan" />
			<property name="ville" type="string" />
			<property name="notes" type="string" />
		</union-subclass>
		<union-subclass name="DepenseMateriel">
			<property name="type">
				<type name="org.hibernate.type.EnumType">
					<param name="enumClass">net.sas.model.enums.TypeComposant</param>
				</type>
			</property>
		</union-subclass>
		<union-subclass name="DepensePiece">
			<many-to-one name="garantie" class="Garantie" unique="true"
				cascade="save-update, delete, delete-orphan" />
			<property name="type">
				<type name="org.hibernate.type.EnumType">
					<param name="enumClass">net.sas.model.enums.TypeComposant</param>
				</type>
			</property>
		</union-subclass>
		<union-subclass name="DepenseOrdreTravail">
			<many-to-one name="ordreTravail" class="OrdreTravail"
				unique="true" cascade="save-update, delete, delete-orphan" />
		</union-subclass>
		<union-subclass name="DepenseAutre">
			<property name="description" type="string" />
		</union-subclass>
	</class>
</hibernate-mapping>