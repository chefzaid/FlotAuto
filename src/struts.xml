<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.ui.theme" value="simple" />

	<package name="app" extends="struts-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
			<result-type name="image"
				class="net.sas.controller.ImageBytesResult" />
		</result-types>
 
		<action name="ImageAction" class="net.sas.controller.ImageAction">
			<result name="success" type="image"></result>
		</action>
	</package>

	<package name="employee" extends="app" namespace="/employee">
		<action name="general" class="net.sas.controller.EmployeeAction"
			method="load">
			<result name="success" type="tiles">/employee.tiles</result>
		</action>
		<action name="view" class="net.sas.controller.EmployeeAction"
			method="view">
			<result name="success" type="tiles">/employee.tiles</result>
		</action>
		<action name="delete" class="net.sas.controller.EmployeeAction"
			method="delete">
			<result name="success" type="tiles">/employee.tiles</result>
		</action>

		<action name="history">
			<result type="tiles">/employeeHistory.tiles</result>
		</action>
	</package>

	<package name="vehicle" extends="app" namespace="/vehicle">
		<action name="vehicle">
			<result type="tiles">/vehicle.tiles</result>
		</action>
	</package>
</struts>