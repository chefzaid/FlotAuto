<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC 
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>
		<property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
		<property name="hibernate.connection.url">
			jdbc:hsqldb:file:data/flotauto;shutdown=true;hsqldb.write_delay=false;
    	</property>
		<property name="hibernate.connection.username">sa</property>
		<property name="hibernate.connection.password">Z41d</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">create</property>
		<property name="hibernate.connection.autocommit">true</property>

		<mapping resource="net/sas/model/bean/Adresse.hbm.xml" />
		<mapping resource="net/sas/model/bean/Personne.hbm.xml" />
		<mapping resource="net/sas/model/bean/ExamenSante.hbm.xml" />
		<mapping resource="net/sas/model/bean/Permis.hbm.xml" />

	</session-factory>
</hibernate-configuration>